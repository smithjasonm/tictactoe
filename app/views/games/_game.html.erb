<%= content_tag :table, class: game_class(game), data: { id: game.id, status: game.status,
                                            opponent_handle: opponent_handle(game) } do %>
  <% 3.times do |row| -%>
    <tr>
      <% 3.times do |col| -%>
        <%= game_cell(game, row, col) %>
      <% end -%>
    </tr>
  <% end -%>
<% end %>
