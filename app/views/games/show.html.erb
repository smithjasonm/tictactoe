<p id="notice"><%= notice %></p>

<p>
  <strong>Player1:</strong>
  <%= @game.player1 %>
</p>

<p>
  <strong>Player2:</strong>
  <%= @game.player2 %>
</p>

<p>
  <strong>Status:</strong>
  <%= @game.status %>
</p>

<%= render @game %>

<% if @game.status == Game::PENDING %>
  <%= form_for @next_play, url: [@game, @next_play], remote: true do |f| %>
    <%= f.hidden_field :number %>
    <%= f.hidden_field :x %>
    <%= f.hidden_field :y %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
