<%= bootstrap_form_tag url: login_path do |f| %>
  <%= f.email_field :email, hide_label: true, placeholder: 'Email address',
                                              class: 'input-lg' %>
  <%= f.password_field :password, hide_label: true, placeholder: 'Password',
                                              class: 'input-lg' %>
  <%= f.form_group :remember_me do %>
    <%= f.check_box :remember_me %>
  <% end %>
  <%= f.form_group do %>
    <%= f.submit 'Log in', class: 'btn btn-lg btn-primary btn-block' %>
  <% end %>
<% end %>